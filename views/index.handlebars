<div class="container bg">
	
	<div class="row">
	    <div class="center col-sm-12">
			<img src="assets/img/Bobs_burger.jpg" alt="Eat-Da-Burger">
	        <h1>Eat-Da-Burger App</h1>
	        <p></p>
	    </div>
  	</div>

	<div class="row center">
	    <div class="col-sm-6">

			<br>
			<h2>Eat These Burgers!</h2>

			<ul>
			  {{#each burgers}}
			    {{#unless this.devoured}}
					{{> burgers/burger-devoured devoured=true}}
			    {{/unless}}
			  {{/each}}
			</ul>

	    </div>

	    <div class="col-sm-6">

			<h2>Devoured Burgers!</h2>
			
			  {{#each burgers}}
			    {{#if this.devoured}}
			      <li>
			        {{this.burger_name}}

			      </li>
			    {{/if}}
			  {{/each}}
			
	    </div>

  	</div>

	<div class="row">
	    <div class="center col-sm-12">

			<h2>Add A Burger!</h2>

			<form class="create-update-form" action="/" method="POST">

			  <div class="form-group">
			    <p>Enter a Burger of the Day you want to order and submit to add!</p>
			    <input type="text" id="ca" name="burger_name">
			  </div>
			  
			  <button class="btn-danger" type="submit">Submit Order</button>
			</form>

	    </div>
	
  	</div>

</div>